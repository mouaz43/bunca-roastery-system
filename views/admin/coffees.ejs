<div class="card">
  <div class="h1">Kaffeesorten</div>
  <p class="p">Aktiv/Inactive + neue Sorten anlegen.</p>

  <form class="form" method="post" action="/admin/coffees">
    <label class="label">
      Neue Sorte
      <input class="input" name="name" placeholder="z.B. Ethiopia Natural" />
    </label>
    <button class="btn btn-primary" type="submit">Hinzufügen</button>
  </form>

  <div class="form">
    <% coffees.forEach(c => { %>
      <div class="alert">
        <strong>#<%= c.id %></strong> — <%= c.name %>
        <span class="muted">(<%= c.active ? 'aktiv' : 'inaktiv' %>)</span>

        <form method="post" action="/admin/coffees/toggle" style="margin-top:10px;">
          <input type="hidden" name="id" value="<%= c.id %>" />
          <button class="btn" type="submit"><%= c.active ? 'Deaktivieren' : 'Aktivieren' %></button>
        </form>
      </div>
    <% }) %>
  </div>
</div>

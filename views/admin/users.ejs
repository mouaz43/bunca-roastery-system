<div class="card">
  <div class="h1">Benutzer</div>
  <p class="p">Neue User anlegen (MVP).</p>

  <form class="form" method="post" action="/admin/users">
    <label class="label">
      Benutzername
      <input class="input" name="username" required />
    </label>

    <label class="label">
      Anzeigename (optional)
      <input class="input" name="display_name" />
    </label>

    <label class="label">
      Rolle
      <select class="input" name="role" required>
        <option value="branch">Filiale</option>
        <option value="b2b">B2B</option>
        <option value="admin">Admin</option>
      </select>
    </label>

    <label class="label">
      Passwort
      <input class="input" name="password" type="password" required />
    </label>

    <button class="btn btn-primary" type="submit">Benutzer erstellen</button>
  </form>

  <div class="form">
    <% users.forEach(u => { %>
      <div class="alert">
        <strong>#<%= u.id %></strong> â€” <%= u.username %>
        <span class="muted">(<%= u.role %>)</span><br/>
        <span class="muted"><%= u.display_name || '' %></span>
      </div>
    <% }) %>
  </div>
</div>

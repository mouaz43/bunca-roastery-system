<div class="card">
  <div class="h1">Meine Bestellungen</div>
  <p class="p">Übersicht der letzten Bestellungen.</p>

  <div class="form">
    <% if (!rows.length) { %>
      <div class="alert">Noch keine Bestellungen.</div>
    <% } %>

    <% rows.forEach(r => { %>
      <div class="alert">
        <strong>#<%= r.id %></strong> — <span class="muted"><%= r.created_at %></span><br/>
        <strong>Status:</strong> <%= r.status %><br/>
        <strong>Artikel:</strong> <%= r.coffee_name %> — <%= r.size %> × <%= r.qty %><br/>
        <% if (r.note) { %>
          <strong>Notiz:</strong> <%= r.note %>
        <% } %>
      </div>
    <% }) %>
  </div>
</div>

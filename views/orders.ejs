<%
  var safeOrders = (typeof orders !== "undefined" && orders) ? orders : [];
  var safeShops = (typeof shops !== "undefined" && shops) ? shops : [];
  var safeCoffees = (typeof coffees !== "undefined" && coffees) ? coffees : [];

  var urlError = (typeof error !== "undefined" && error) ? error : null;

  function statusInfo(status){
    var map = {
      "ENTWURF": { cls: "badge", label: "Entwurf" },
      "EINGEGANGEN": { cls: "badge warn", label: "Eingegangen" },
      "FREIGEGEBEN": { cls: "badge ok", label: "Freigegeben" },
      "IN_PRODUKTION": { cls: "badge warn", label: "In Produktion" },
      "VERPACKT": { cls: "badge ok", label: "Verpackt" },
      "AUSGELIEFERT": { cls: "badge", label: "Ausgeliefert" }
    };
    if (!status || !map[status]) return { cls: "badge", label: "-" };
    return map[status];
  }

  function channelLabel(o){
    if (!o || !o.channel) return "-";
    return (o.channel === "B2B") ? "B2B" : "Filiale";
  }

  function targetLabel(o){
    if (!o) return "-";
    if (o.channel === "B2B") return o.customerName ? o.customerName : "B2B Kunde";
    if (o.shopName) return o.shopName;
    if (o.shopId) return o.shopId;
    return "Filiale";
  }

  function shortId(id){
    if (!id) return "-";
    return (String(id).length >= 8) ? String(id).slice(0,8) : String(id);
  }
%>

<div class="card-grid">
  <div class="card">
    <h2>Bestellungen</h2>
    <p>Prüfen, freigeben, weiterführen. Auslieferung bucht Röstkaffee aus dem Lager.</p>
  </div>

  <div class="card">
    <h2>Status Timeline</h2>
    <p>Entwurf  Eingegangen  Freigegeben  In Produktion  Verpackt  Ausgeliefert</p>
  </div>
</div>

<div id="new" style="margin-top:14px;" class="card card-wide">
  <h2>Neue Bestellung</h2>
  <p>Erstellt eine Bestellung im System. Mindestens eine Position ist erforderlich.</p>

  <form method="POST" action="/actions/orders/create">
    <div class="filterbar" style="margin-top:12px;">
      <div class="filter-left">
        <select class="select" name="channel">
          <option value="FILIALE">Kanal: Filiale</option>
          <option value="B2B">Kanal: B2B</option>
        </select>

        <select class="select" name="shopId">
          <option value="">Filiale wählen</option>
          <% for (var s=0; s<safeShops.length; s++) { %>
            <option value="<%= safeShops[s].id %>"><%= safeShops[s].name %></option>
          <% } %>
        </select>

        <input class="input" name="customerName" placeholder="B2B Kunde (nur bei B2B)" />
        <input class="input" name="deliveryDate" placeholder="Lieferdatum (YYYY-MM-DD)" />
      </div>

      <div class="filter-right">
        <button class="btn btn-secondary" type="reset">Zurücksetzen</button>
        <button class="btn btn-primary" type="submit">Anlegen</button>
      </div>
    </div>

    <div style="margin-top:12px;" class="table-wrap">
      <div class="table-head" style="grid-template-columns: 1fr 180px;">
        <div>Artikel</div>
        <div>Menge kg</div>
      </div>

      <% for (var i=1; i<=4; i++) { %>
        <div class="table-row" style="grid-template-columns: 1fr 180px;">
          <div>
            <select class="select" style="width:100%;" name="item<%= i %>CoffeeId">
              <option value="">Sorte wählen</option>
              <% for (var c=0; c<safeCoffees.length; c++) { %>
                <option value="<%= safeCoffees[c].id %>"><%= safeCoffees[c].name %></option>
              <% } %>
            </select>
          </div>
          <div><input class="input" style="width:100%;" name="item<%= i %>Kg" placeholder="z.B. 10" /></div>
        </div>
      <% } %>
    </div>

    <div style="margin-top:12px; display:flex; gap:10px; flex-wrap:wrap;">
      <input class="input" style="flex:1; min-width:260px;" name="note" placeholder="Notiz (optional)" />
    </div>
  </form>
</div>

<div style="margin-top:14px;" class="table-wrap">
  <div class="table-head">
    <div>ID</div>
    <div>Kanal</div>
    <div>Kunde Filiale</div>
    <div>Lieferdatum</div>
    <div>Status</div>
    <div>Aktionen</div>
  </div>

  <% if (!safeOrders.length) { %>
    <div class="table-row">
      <div class="mono">-</div>
      <div>-</div>
      <div>Keine Bestellungen vorhanden</div>
      <div>-</div>
      <div><span class="badge"><span class="dot"></span>Info</span></div>
      <div class="row-actions">
        <a class="btn btn-primary" href="#new">Neue Bestellung</a>
      </div>
    </div>
  <% } %>

  <% for (var i = 0; i < safeOrders.length; i++) {
      var o = safeOrders[i];
      var s = statusInfo(o.status);
  %>
    <div class="table-row">
      <div class="mono"><%= shortId(o.id) %></div>
      <div><%= channelLabel(o) %></div>
      <div><%= targetLabel(o) %></div>
      <div><%= o.deliveryDate ? o.deliveryDate : "-" %></div>
      <div><span class="<%= s.cls %>"><span class="dot"></span><%= s.label %></span></div>
      <div class="row-actions">
        <form method="POST" action="/actions/orders/<%= o.id %>/advance">
          <button class="btn btn-primary" type="submit">Weiter</button>
        </form>

        <form method="POST" action="/actions/orders/<%= o.id %>/approve">
          <button class="btn btn-secondary" type="submit">Freigeben</button>
        </form>

        <form method="POST" action="/actions/orders/<%= o.id %>/deliver" onsubmit="return confirm('Auslieferung buchen? Röstkaffee wird abgezogen.');">
          <button class="btn btn-secondary" type="submit">Ausliefern</button>
        </form>

        <form method="POST" action="/actions/orders/<%= o.id %>/delete" onsubmit="return confirm('Bestellung wirklich löschen?');">
          <button class="btn btn-danger" type="submit">Löschen</button>
        </form>
      </div>
    </div>

    <div class="table-row" style="grid-template-columns: 1fr;">
      <div>
        <div style="display:flex; justify-content:space-between; gap:12px; flex-wrap:wrap;">
          <div>
            <div class="small-note">Details</div>
            <div style="margin-top:6px;">
              <strong>Notiz:</strong> <%= o.note ? o.note : "-" %>
            </div>
            <div style="margin-top:6px;">
              <strong>Positionen:</strong>
              <% if (o.items && o.items.length) { %>
                <% for (var k=0; k<o.items.length; k++) { %>
                  <div class="small-note"><%= o.items[k].coffeeName %> — <%= o.items[k].kg %> kg</div>
                <% } %>
              <% } else { %>
                <div class="small-note">Keine Positionen</div>
              <% } %>
            </div>
          </div>

          <div style="display:flex; gap:10px; flex-wrap:wrap; align-items:flex-start;">
            <a class="btn btn-ghost" href="/production">In Produktion prüfen</a>
            <a class="btn btn-ghost" href="/inventory">Lager prüfen</a>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>

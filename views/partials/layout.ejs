<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title ? title : "Bunca Rösterei System" %></title>
  <link rel="stylesheet" href="/css/app.css" />
</head>

<body>
  <%
    var safeActiveNav = (typeof activeNav !== "undefined" && activeNav) ? activeNav : "";
    var safePageTitle = (typeof pageTitle !== "undefined" && pageTitle) ? pageTitle : (title ? title : "Übersicht");
    var safePageSubtitle = (typeof pageSubtitle !== "undefined" && pageSubtitle) ? pageSubtitle : "";

    var safePrimaryAction = (typeof primaryAction !== "undefined" && primaryAction) ? primaryAction : null;
    var safeSecondaryAction = (typeof secondaryAction !== "undefined" && secondaryAction) ? secondaryAction : null;
    var safeTertiaryAction = (typeof tertiaryAction !== "undefined" && tertiaryaryAction) ? tertiaryaryAction : null;

    // fix typo fallback:
    if (!safeTertiaryAction && (typeof tertiaryAction !== "undefined")) safeTertiaryAction = tertiaryAction;

    var statusVariant = "ok";
    var statusText = "Betrieb normal";

    if (typeof systemStatus !== "undefined" && systemStatus) {
      if (systemStatus.variant) statusVariant = systemStatus.variant;
      if (systemStatus.text) statusText = systemStatus.text;
    }

    var userRole = "Nicht angemeldet";
    var userLocation = "Frankfurt";

    if (typeof user !== "undefined" && user) {
      if (user.role) userRole = user.role;
      if (user.location) userLocation = user.location;
    }

    var safeHintTitle = (typeof hintTitle !== "undefined" && hintTitle) ? hintTitle : "Seitenhinweis";
    var safeHintLines = (typeof hintLines !== "undefined" && hintLines && hintLines.length) ? hintLines : null;
    var safeHintMeta = (typeof hintMeta !== "undefined" && hintMeta) ? hintMeta : null;
  %>

  <div class="app-shell">
    <aside class="sidebar">
      <div class="brand">
        <div class="brand-mark"></div>
        <div class="brand-text">
          <div class="brand-name">Bunca Rösterei</div>
          <div class="brand-subtitle">Produktions und Bestellsystem</div>
        </div>
      </div>

      <nav class="nav">
        <a class="nav-item <%= (safeActiveNav === 'dashboard') ? 'is-active' : '' %>" href="/dashboard">
          <span class="nav-label">Dashboard</span>
        </a>

        <a class="nav-item <%= (safeActiveNav === 'orders') ? 'is-active' : '' %>" href="/orders">
          <span class="nav-label">Bestellungen</span>
        </a>

        <a class="nav-item <%= (safeActiveNav === 'production') ? 'is-active' : '' %>" href="/production">
          <span class="nav-label">Produktion</span>
        </a>

        <a class="nav-item <%= (safeActiveNav === 'inventory') ? 'is-active' : '' %>" href="/inventory">
          <span class="nav-label">Lager</span>
        </a>

        <a class="nav-item <%= (safeActiveNav === 'analytics') ? 'is-active' : '' %>" href="/analytics">
          <span class="nav-label">Analysen</span>
        </a>

        <a class="nav-item <%= (safeActiveNav === 'activity') ? 'is-active' : '' %>" href="/activity">
          <span class="nav-label">Aktivität</span>
        </a>

        <div class="nav-sep"></div>

        <a class="nav-item <%= (safeActiveNav === 'settings') ? 'is-active' : '' %>" href="/settings">
          <span class="nav-label">Einstellungen</span>
        </a>
      </nav>

      <div class="sidebar-footer">
        <div class="status-pill <%= statusVariant %>">
          <span class="status-dot"></span>
          <span class="status-text"><%= statusText %></span>
        </div>

        <div class="meta">
          <div class="meta-row">
            <span class="meta-label">Rolle</span>
            <span class="meta-value"><%= userRole %></span>
          </div>
          <div class="meta-row">
            <span class="meta-label">Standort</span>
            <span class="meta-value"><%= userLocation %></span>
          </div>
        </div>
      </div>
    </aside>

    <main class="main">
      <header class="topbar">
        <div class="topbar-left">
          <h1 class="page-title"><%= safePageTitle %></h1>
          <% if (safePageSubtitle) { %>
            <div class="page-subtitle"><%= safePageSubtitle %></div>
          <% } %>
        </div>

        <div class="topbar-right" style="display:flex; gap:10px; align-items:flex-start; flex-wrap:wrap;">
          <% if (safeTertiaryAction && safeTertiaryAction.href && safeTertiaryAction.label) { %>
            <a class="btn btn-ghost" href="<%= safeTertiaryAction.href %>"><%= safeTertiaryAction.label %></a>
          <% } %>

          <% if (safeSecondaryAction && safeSecondaryAction.href && safeSecondaryAction.label) { %>
            <a class="btn btn-secondary" href="<%= safeSecondaryAction.href %>"><%= safeSecondaryAction.label %></a>
          <% } %>

          <% if (safePrimaryAction && safePrimaryAction.href && safePrimaryAction.label) { %>
            <a class="btn btn-primary" href="<%= safePrimaryAction.href %>"><%= safePrimaryAction.label %></a>
          <% } %>
        </div>
      </header>

      <section class="content">
        <%- body %>
      </section>

      <footer class="hint">
        <div class="hint-inner">
          <div class="hint-title"><%= safeHintTitle %></div>

          <% if (safeHintLines) { %>
            <div class="hint-text">
              <% for (var i = 0; i < safeHintLines.length; i++) { %>
                <div class="hint-line"><%= safeHintLines[i] %></div>
              <% } %>
            </div>
          <% } else { %>
            <div class="hint-text">
              <div class="hint-line">Diese Seite unterstützt Sie bei der täglichen Arbeit. Folgen Sie den Schritten oben, um schnell und sicher zu arbeiten.</div>
            </div>
          <% } %>

          <% if (safeHintMeta) { %>
            <div class="hint-meta">
              <% if (safeHintMeta.left) { %>
                <span class="hint-meta-item"><%= safeHintMeta.left %></span>
              <% } %>
              <% if (safeHintMeta.right) { %>
                <span class="hint-meta-item"><%= safeHintMeta.right %></span>
              <% } %>
            </div>
          <% } %>
        </div>
      </footer>
    </main>
  </div>
</body>
</html>
